<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81248A"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="43dp"
        android:paddingRight="43dp"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Learn Graphic and UI/UX designing in Bahasa for free with live projects."
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        />

    <LinearLayout
        android:id="@+id/linear_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textColorHint="#767676"
            android:drawableEnd="@drawable/baseline_mail_outline_24"
            android:paddingRight="20dp"
            android:drawableTint="#767676"
            />
        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#767676"
            android:drawableEnd="@drawable/baseline_lock_open_24"
            android:paddingRight="20dp"
            android:drawableTint="#767676"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:text="LOGIN"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:backgroundTint="#FD8C00"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_lay1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="36dp"
        android:textSize="16sp"
        android:textColor="#FD8C00"
        android:text="Forgot Password?"
        />
    <TextView
        android:id="@+id/or_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/forgot_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="or login With"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:id="@+id/group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/or_login"
        >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/google_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/google_logo"
            android:background="@drawable/button_circle"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/facebook_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/f"
            android:background="@drawable/button_circle"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/twitter_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/t"
            android:background="@drawable/button_circle"
            android:scaleType="fitCenter"
            android:padding="15dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/dont_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/register_now"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:clickable="true"
        android:onClick="registerIntent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dont_have"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="@string/TOS"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>