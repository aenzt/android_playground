<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81248A"
    tools:context=".Register">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="43dp"
        android:paddingRight="43dp"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Learn Graphic and UI/UX designing in Bahasa for free with live projects."
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        />
    <LinearLayout
        android:id="@+id/linear_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <EditText
            android:id="@+id/nim_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:hint="NIM"
            android:textColor="@color/black"
            android:textColorHint="#767676"
            android:drawableEnd="@drawable/baseline_mail_outline_24"
            android:paddingRight="20dp"
            android:drawableTint="#767676"
            />
        <EditText
            android:id="@+id/hp_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:hint="HP"
            android:textColor="@color/black"
            android:textColorHint="#767676"
            android:drawableEnd="@drawable/baseline_local_phone_24"
            android:paddingRight="20dp"
            android:drawableTint="#767676"
            />
        <EditText
            android:id="@+id/nama_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:hint="NAMA"
            android:textColor="@color/black"
            android:textColorHint="#767676"
            android:drawableEnd="@drawable/baseline_person_24"
            android:paddingRight="20dp"
            android:drawableTint="#767676"
            />
        <EditText
            android:id="@+id/alamat_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:hint="Alamat"
            android:textColor="@color/black"
            android:textColorHint="#767676"
            android:drawableEnd="@drawable/baseline_house_24"
            android:paddingRight="20dp"
            android:drawableTint="#767676"
            />
        <Spinner
            android:id="@+id/dropdown_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:spinnerMode="dropdown"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:background="@drawable/bg_input"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:text="REGISTER"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:backgroundTint="#FD8C00"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:text="GO TO LOGIN"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:backgroundTint="#FD8C00"
            android:textColor="@color/white"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>